{
  "name": "ca-python-standard",
  "version": "0.1.0",
  "description": "Installs Poetry and CA poetry helpers, activates virtualenv, and installs pre-commit hooks",
  "packages": [
    "awscli2@latest",
    "poetry@latest",
    "granted@latest"
  ],
  "env": {},
  "create_files": {
    "{{.Virtenv}}/bin/ca-python-install": "bin/ca-python-install",
    "{{.Virtenv}}/bin/auto-venv": "bin/auto-venv",
    "{{.Virtenv}}/bin/preconditions.sh": "bin/preconditions.sh",
    ".devbox_scripts/granted-set-browser.sh": "bin/granted-set-browser.sh"
  },
  "shell": {
    "scripts": {
      "python-install": "{{.Virtenv}}/bin/ca-python-install"
    },
    "init_hook": [
      ". {{.Virtenv}}/bin/auto-venv",
      ". {{.Virtenv}}/bin/preconditions.sh || exit 1"
    ]
  }
}
