{
  "name": "pipx",
  "version": "0.1.0",
  "description": "Installs Pipx and makes it available",
  "packages": ["pipx@latest"],
  "env": {
    "PIPX_HOME": "{{ .Virtenv }}",
    "PIPX_BIN_DIR": "{{ .Virtenv }}/bin"
  },
  "shell": {
      "init_hook": [
          "export PATH=\"{{ .Virtenv }}/bin:$PATH\""
      ]
  }
}
