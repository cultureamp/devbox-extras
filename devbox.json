{
  "env": {
    "DEVBOX_SHARE_DIR": "$PWD/.devbox/nix/profile/default/share",
    "NETSKOPE_CERT_PATH": "/Library/Application Support/Netskope/STAgent/data/nscacert.pem"
  },
  "packages": [
    "bats@latest",
    "bats.libraries.bats-assert",
    "bats.libraries.bats-support"
  ],
  "shell": {
    "init_hook": [
      "echo 'Welcome to devbox!' > /dev/null"
    ],
    "scripts": {
      "test": [
        "docker build -t bootstrap-script-test-zsh --build-arg NETSKOPE_CERT=\"$(cat \"$NETSKOPE_CERT_PATH\")\" -f ./bootstrap-zsh-test.Dockerfile .",
        "docker run bootstrap-script-test-zsh",
        "docker build -t bootstrap-script-test-bash --build-arg NETSKOPE_CERT=\"$(cat \"$NETSKOPE_CERT_PATH\")\" -f ./bootstrap-bash-test.Dockerfile .",
        "docker run bootstrap-script-test-bash",
        "docker build -t bootstrap-script-test-fish --build-arg NETSKOPE_CERT=\"$(cat \"$NETSKOPE_CERT_PATH\")\" -f ./bootstrap-fish-test.Dockerfile .",
        "docker run bootstrap-script-test-fish"
      ],
      "test-bash" : [
        "docker build -t bootstrap-script-test-bash --build-arg NETSKOPE_CERT=\"$(cat \"$NETSKOPE_CERT_PATH\")\" -f ./bootstrap-bash-test.Dockerfile .",
        "docker run bootstrap-script-test-bash"
      ],
      "test-zsh" :[
        "docker build -t bootstrap-script-test-zsh --build-arg NETSKOPE_CERT=\"$(cat \"$NETSKOPE_CERT_PATH\")\" -f ./bootstrap-zsh-test.Dockerfile .",
        "docker run bootstrap-script-test-zsh"
      ],
      "test-fish" :[
        "docker build -t bootstrap-script-test-fish --build-arg NETSKOPE_CERT=\"$(cat \"$NETSKOPE_CERT_PATH\")\" -f ./bootstrap-fish-test.Dockerfile .",
        "docker run bootstrap-script-test-fish"
      ]
    }
  }
}
